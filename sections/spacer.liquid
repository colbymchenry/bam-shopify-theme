<div style="width: 100%;height: {{ section.settings.height }}rem;">

</div>

{% schema %}
{
    "name": "Spacer",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "range",
            "id": "height",
            "label": "Height",
            "step": 0.5,
            "min": 0,
            "max": 50,
            "unit": "rem",
            "default": 0
        }
    ]
}
{% endschema %}