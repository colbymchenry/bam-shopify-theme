{% style %}

  #shopify-section-{{ section.id }} {
  {% if section.settings["is--grid"] == true %}
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
  {% else %}
    display: flex;
    justify-content: {{ section.settings.justifyContent }};
    align-items: {{ section.settings.alignItems }};
    gap: {{ section.settings.gap }}rem;
    flex-wrap: {{ section.settings.wrap }};
  {% endif %}
    margin: 0 auto;
    padding: 0 8% 0 8%;
  }

  {% if section.settings.wrapWidth != blank %}
  @media screen and (max-width: {{ section.settings.wrapWidth }}px) {
    #shopify-section-{{ section.id }} {
      {% if section.settings.wrap == 'wrap-reverse' %}
      flex-wrap: wrap-reverse !important;

        {% else %}
      flex-wrap: wrap !important;

        {% endif %}
    }

    #shopify-section-{{ section.id }} > *:first-child {
      flex-basis: 100% !important;
    }

    #shopify-section-{{ section.id }} > *:last-child {
      flex-basis: 100% !important;
    }
  }
  {% endif %}

  #shopify-section-{{ section.id }} > *:first-child {
    flex-basis: {{ section.settings.widthFirstChild }}%;
    flex-grow: 1;
    {% if section.settings.minWidthFirstChild != blank %}
    min-width: {{ section.settings.minWidthFirstChild }}px;
    {% endif %}
  }

  #shopify-section-{{ section.id }} > *:last-child {
    flex-basis: {{ section.settings.widthLastChild }}%;
    flex-grow: 1;
    {% if section.settings.minWidthLastChild != blank %}
      min-width: {{ section.settings.minWidthLastChild }}px;
    {% endif %}
  }

{% endstyle %}

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', () => {
    const sectionId = {{ section.id | json }};
    const sectionElem = document.getElementById(`shopify-section-${sectionId}`);
    const nextElem = sectionElem.nextElementSibling;
    const nextNextElem = nextElem.nextElementSibling;

    sectionElem.classList.add("two-column")
    sectionElem.insertAdjacentHTML("afterbegin", nextElem.outerHTML);
    sectionElem.insertAdjacentHTML("beforeend", nextNextElem.outerHTML);

    nextElem.remove();
    nextNextElem.remove();
  }, false);
</script>

{% schema %}
{
  "name": "Two column",
  "settings": [
    {
      "type": "checkbox",
      "id": "is--grid",
      "label": "Use Grid Layout?",
      "default": false
    },
    {
      "type": "select",
      "id": "justifyContent",
      "label": "Justify Content",
      "options": [
        {
          "value": "flex-start",
          "label": "Start"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "End"
        },
        {
          "value": "space-around",
          "label": "Space-Around"
        },
        {
          "value": "space-between",
          "label": "Space-Between"
        },
        {
          "value": "space-evenly",
          "label": "Space-Evenly"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "alignItems",
      "label": "Align Items",
      "options": [
        {
          "value": "flex-start",
          "label": "Start"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "End"
        }
      ],
      "default": "center"
    },
    {
    "type": "select",
    "id": "wrap",
    "label": "Wrap",
    "options": [
      {
        "value": "wrap",
        "label": "Yes"
      },
      {
        "value": "wrap-reverse",
        "label": "Yes - Reverse"
      },
      {
        "value": "nowrap",
        "label": "No"
      }
    ],
    "default": "nowrap"
    },
    {
      "type": "number",
      "id": "wrapWidth",
      "label": "Force Trigger Wrap(px)",
      "info": "Wrap content at this many pixels.",
      "default": 500
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 0,
      "max": 50,
      "step": 0.5,
      "unit": "rem",
      "default": 2
    },
    {
      "type": "number",
      "id": "minWidth",
      "label": "Min Width",
      "default": 300
    },
    {
      "type": "range",
      "id": "width",
      "label": "Width",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "number",
      "id": "maxWidth",
      "label": "Max Width",
      "default": 1680
    },
    {
      "type": "number",
      "id": "minWidthFirstChild",
      "label": "Min Width First Element",
      "info": "In pixels.",
      "default": 300
    },
    {
      "type": "range",
      "id": "widthFirstChild",
      "label": "Width First Element",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "number",
      "id": "minWidthLastChild",
      "label": "Min Width Last Element",
      "info": "In pixels.",
      "default": 300
    },
    {
      "type": "range",
      "id": "widthLastChild",
      "label": "Width Last Element",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    }
  ],
  "presets": [{
    "name": "Two column",
    "category": "Text"
  }]
}
{% endschema %}
