<style>
    .video_with_text__container {
        width: 100%;
        display: flex;
        gap: 2rem;
        padding: 0 8% 0 8%;
    }

    .video_with_text__container .left,.right {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .video_with_text__container .left {
        justify-content: space-evenly;
    }

    .video_with_text__container .left h5 {
        color: #DFB67A;
        font-family: "Montserrat", Sans-serif, serif;
        font-size: 16px;
        font-weight: 500;
        text-transform: uppercase;
        line-height: 28px;
    }

    .video_with_text__container .left h3 {
        color: #77A5BE;
        font-family: "Antic Didone", Sans-serif, serif;
        font-size: 38px;
        line-height: 1.26em;
    }

    .video_with_text__container .left .heading-logo {
        width: 64px;
    }

    .video_with_text__container .right {
        color: #54595F;
        font-family: "Montserrat", Sans-serif, serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 28px;
    }

    .video_with_text__container .right video {
        max-width: 100%;
        object-fit:cover;
    }
</style>


<div class="video_with_text__container">
    <div class="left">
        {% if section.settings.heading_logo != blank %}
            <img class="heading-logo" loading="lazy" src="{{ section.settings.heading_logo | img_url: "master" }}" alt="heading-logo" />
        {% endif %}
        {% if section.settings.heading != blank %}
            <h5>{{ section.settings.heading }}</h5>
        {% endif %}
        {% if section.settings.title != blank %}
            <h3>{{ sectiong.settings.title }}</h3>
        {% endif %}
        {% if section.settings.body %}
            {{ section.settings.body }}
        {% endif %}
    </div>
    <div class="right">
        {% if section.settings.video_url != blank %}
            <video autoplay="" muted="" loop="" preload="auto"><source src="{{ section.settings.video_url }}" type="video/mp4"></video>
        {% endif %}
    </div>
</div>

{% schema %}
{
    "name": "Video with text",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "heading_logo",
            "label": "Heading Logo"
        },
        {
            "type": "text",
            "id": "heading",
            "default": "OUR STORY",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Balanced Aesthetics' Unique Model Created For You",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "body",
            "label": "Body"
        },
        {
            "type": "text",
            "id": "video_url",
            "label": "Video File URL",
            "info": "Upload video to theme files then copy link and paste here. *MUST BE MP4*"
        }
    ]
}
{% endschema %}