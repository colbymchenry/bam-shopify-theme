    </div>
    <div class="right" data-aos="fade-left">
        {% if section.settings.video_url != blank %}
            <video autoplay="" muted="" loop="" preload="auto"><source src="{{ section.settings.video_url }}" type="video/mp4"></video>
        {% endif %}
        {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}" loading="lazy" />
        {% endif %}
    </div>
</div>

{% schema %}
{
    "name": "Informational Section",
    "tag": "section",
    "class": "section",
    "presets": [{
        "name": "Informational Section",
        "category": "Text"
    }],
    "settings": [
      {
        "type": "checkbox",
        "id": "semaglutide",
        "label": "Semaglutide",
        "default": false
      },
        {
            "type": "image_picker",
            "id": "heading_logo",
            "label": "Heading Logo"
        },
        {
            "type": "text",
            "id": "heading",
            "default": "OUR STORY",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Balanced Aesthetics' Unique Model Created For You",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "body",
            "label": "Body"
        },
        {
            "type": "text",
            "id": "video_url",
            "label": "Video File URL",
            "info": "Upload video to theme files then copy link and paste here. *MUST BE MP4*"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "If using photo select one here."
        },
        {
            "type": "range",
            "id": "gap",
            "label": "Gap",
            "min": 0,
            "max": 50,
            "step": 0.5,
            "default": 20
        }
    ]
}
{% endschema %}